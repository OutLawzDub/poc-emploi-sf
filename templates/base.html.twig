<!doctype html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.80.0">
    <title>Poc Emploi - {% block title %}{% endblock %}</title>
    <!-- Bootstrap core CSS -->
    {% block stylesheets %}

        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('css/custom.min.css') }}" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" integrity="sha512-HK5fgLBL+xu6dm/Ii3z4xhlSUyZgTT9tuc/hSrtw6uzJOvgRr2a9jyxxT1ely+B+xFAmJKVSTbpM/CuL7qxO8w==" crossorigin="anonymous" />

    {% endblock %}
    <meta name="theme-color" content="#7952b3">
</head>
<body class="d-flex flex-column h-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="#">JCDecaux</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor02">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item {% if app.request.attributes.get('_route') == "admin" %}active{% endif %}">
                        <a class="nav-link" href="{{ path('admin') }}">Accueil</a>
                    </li>
                    <li class="nav-item {% if app.request.attributes.get('_route')|split('_')[0] == "user" %}active{% endif %}">
                        <a class="nav-link" href="{{ path('user_index') }}">Utilisateur</a>
                    </li>
                    <li class="nav-item {% if app.request.attributes.get('_route')|split('_')[0] == "campagne" %}active{% endif %}">
                        <a class="nav-link" href="{{ path('campagne_index') }}">Campagne</a>
                    </li>
                    <li class="nav-item {% if app.request.attributes.get('_route')|split('_')[0] == "horaire" %}active{% endif %}">
                        <a class="nav-link" href="{{ path('horaire_index') }}">Horaire</a>
                    </li>
                    <li class="nav-item {% if app.request.attributes.get('_route')|split('_')[0] == "job" %}active{% endif %}">
                        <a class="nav-link" href="{{ path('job_index') }}">Job</a>
                    </li>
                    <li style="right:0; position:absolute;" class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Se d√©connecter ({{ app.user.email }})</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container">
        {% block body %}{% endblock %}
    </div>

    {% block javascripts %}
        <script src="{{ asset('js/jquery.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
        <script src="{{ asset('js/custom.min.js') }}"></script>
    {% endblock %}
</body>
</html>
