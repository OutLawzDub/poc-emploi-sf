<form method="post" action="{{ path('job_delete', {'slug': job.slug}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ job.id) }}">
    <br>
    <button class="btn btn-primary btn-danger">Supprimer</button>
</form>
